{
    "name": "Timezone/App Finder",
    "version": "2.0.1",
    "description": "This is a simple extension that displays your current time zone",
    "manifest_version": 2,
    "icons": {
        "128": "clock.png"
    },
    "browser_action": {
        "default_title": "Add Text",
        "default_icon": "clock.png",
        "default_popup": "popup.html"
    },
    "permissions": ["activeTab"],
    "background": {
        "scripts": ["main.js"]
    }
}